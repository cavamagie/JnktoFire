pipeline {
    agent any
    stages {
        stage('Vars') {
          steps {
            script {

              def dockerImage = 'ansible/ansible:latest'
              def podName = "my-pod"
              def poddo = "poddo"

            }
          }
        }

        stage('Build') {
            agent {
                docker {
                    image 'ansible/centos7-ansible'
                    // Run the container on the node specified at the
                    // top-level of the Pipeline, in the same workspace,
                    // rather than on a new node entirely:
                    reuseNode true
                }
                }
   
            steps {
                sh 'pwd'
                sh "whoami"
            }

                }
            }
        }


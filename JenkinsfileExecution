import groovy.json.JsonOutput
pipeline {
    agent any
    stages {
        stage('Vars') {
          steps {
            script {
              writeFile file: 'params.json', text: JsonOutput.toJson(params)
              
              writeYaml file: 'params.yaml', data: poddo
              echo sh(returnStdout: true, script: 'env')

            }
          }
        }
        stage('Build') {
            agent {
                docker {
                    image "params.images"
                    args "-u root:root"
                    reuseNode true
                }
                }
   
            steps {
                sh 'pwd'
                sh "ls"
                shell "whoami"                         
                sh "ansible-playbook Playbook.yaml -v -i inventory.pippo -e \"@params.json\""
            }

                }
            }
        }


pipeline {
    agent any
    stages {
        stage('Vars') {
          steps {
            script {

              def dockerImage = 'ansible/ansible:latest'
              def podName = "my-pod"
              def poddo = "poddo"

            }
          }
        }

        stage('Build') {
          steps {
            script {
              // Build your Docker container
              //docker.build('my-container:latest', '.')
              def dockerImage = 'ansible/centos7-ansible'

                    // Pull the Docker image
              sh "docker pull ${dockerImage}"
            }
          }
        }
        stage('Docker Run') {
            steps {
                script {
                    // Download the repository using Git
                    def podName = "my-pod"
                    sh "docker run --name ${podName} ${dockerImage}"
                }
            }
        }
    }
}
